mjml
    //- Head
    mj-head
        mj-title Promotions Netgear 3e Trimestre
        mj-font(name='Source Sans 3' href='https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap')
        mj-raw.
            <meta charset="UTF-8">
            <meta name='color-scheme' content='light'/>
            <meta name='supported-color-schemes' content='light'/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-all(font-family='"Source Sans 3", Arial, Helvetica, sans serif')/
            mj-class(name='T35-300' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='35px' font-weight='300')/
            mj-class(name='T27-300' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='27px' font-weight='300')/
            mj-class(name='T24-500' font-family='Arial, Helvetica, sans-serif' font-style="normal" font-size='24px' font-weight='500')/
            mj-class(name='T14-400' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='14px' font-weight="400")/
            mj-class(name='T12-400' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='12px' font-weight="400")/
            mj-class(name='T11-300' font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='11px' font-weight="300")/
            mj-button(padding="0" inner-padding="10px 45px" border-radius="20px" font-family='"Source Sans 3", Arial, Helvetica, sans-serif' font-style="normal" font-size='16px' line-height='20px' font-weight='700' text-transform="uppercase")
            //- Black colors text
            mj-class(name="cT1" color="#2c262d")/
            mj-class(name="bgT1" background-color="#2c262d")
            mj-class(name="cT0" color="#000000")/
            mj-class(name="bg0" background-color="#000000")/
            mj-class(name="cTW" color="#ffffff")/
            mj-class(name="bgW" background-color="#ffffff")/
            //- Colors
            mj-class(name="cB" color="#00A4DE")/
            mj-class(name="bgB" background-color="#00A4DE")/
            mj-class(name="cP" color="#73389B")/
            mj-class(name="bgP" background-color="#73389B")/
        mj-breakpoint(width="480px")
    //- Body
    mj-body(background-color='#f1f0f0' width="700px")
        //- content
        block content
        //- bloc header
        block header
            include ../includes/_header
        //- bloc produit 01
        block prod01
            include ../includes/_prod01
        //- bloc produit 02
        block prod02
            include ../includes/_prod02
        //- bloc produit 03
        block prod03
            include ../includes/_prod03
        //- bloc conclusion
        block conclusion
            include ../includes/_conclusion
        //- bloc footer
        block footer
            include ../includes/_footer